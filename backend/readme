create table users(
        id uuid not null primary key,
        email varchar not null ,
        name varchar not null ,
        password varchar not null ,
        role varchar not null,
        unique (email, name)
);

create table books(
    id uuid not null primary key,
    description varchar,
    title varchar,
    author varchar,
    delete bool
);

create table form(
    id uuid not null primary key,
    user_id uuid REFERENCES users (id) NOT NULL,
    book_id uuid REFERENCES books (id) NOT NULL,
    date_of_taking DATE NOT NULL ,
    date_of_returning DATE,
    term_of_returning DATE NOT NULL ,
    penalties int,
    delay int
);

create table deleted_books(
    id uuid not null primary key,
    book_id uuid REFERENCES books (id) NOT NULL,
    remover_id uuid,
    date_of_delete Date not null
);

create table deleted_books(
    id uuid not null primary key,
    user_id uuid REFERENCES users (id) NOT NULL,
    remover_id uuid,
    date_of_delete Date not null
);
